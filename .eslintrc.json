{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ], 
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,  
        "eqeqeq": 2  
    }
}